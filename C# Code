using System;
using System.Collections.Generic;
using System.Configuration;
using System.Data;
using System.Data.SqlClient;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace WebApplication1
{
    public partial class WebForm1 : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }
        protected void Button1_Click(object sender, EventArgs e)
        {
            if (validiatyCheck())
            {
                string cs = ConfigurationManager.ConnectionStrings["ConnectionString"].ConnectionString;
                SqlConnection con = new SqlConnection(cs);

                string searchText = txtSearch.Text;
                switch (drpSearchType.SelectedItem.Text)
                {
                    case "Course ID":
                        string SearchQueryCID = "select * from CoursesTable where [Course_ID] =" + searchText;
                        SqlCommand CID = new SqlCommand(SearchQueryCID, con);
                        con.Open();
                        SqlDataReader drCID = CID.ExecuteReader();
                        while (drCID.Read())
                        {
                            if (searchText == drCID.GetValue(0).ToString())
                            {
                                lblResults.Text = drCID.GetValue(0).ToString();
                                for (int i = 1; i <= 6; i++)
                                {
                                    lblResults.Text += (" " + drCID.GetValue(i).ToString());
                                }
                            }
                        }
                        con.Close();
                        break;
                    case "Course Name":
                        string SearchQueryCN = "select * from CoursesTable where [Course_Name] =" + searchText;
                        SqlCommand CN = new SqlCommand(SearchQueryCN, con);
                        con.Open();
                        SqlDataReader drCN = CN.ExecuteReader();
                        while (drCN.Read())
                        {
                            if (searchText == drCN.GetValue(1).ToString())
                            {
                                lblResults.Text = drCN.GetValue(0).ToString();
                                for (int i = 1; i <= 6; i++)
                                {
                                    lblResults.Text += (" " + drCN.GetValue(i).ToString());
                                }
                            }
                        }
                        con.Close();
                        break;
                    case "Professor Name":
                        string SearchQueryPN = "select * from CoursesTable where [Professor_Name] =" + searchText;
                        SqlCommand PN = new SqlCommand(SearchQueryPN, con);
                        con.Open();
                        SqlDataReader drPN = PN.ExecuteReader();
                        while (drPN.Read())
                        {
                            if (searchText == drPN.GetValue(3).ToString())
                            {
                                lblResults.Text = drPN.GetValue(0).ToString();
                                for (int i = 1; i <= 6; i++)
                                {
                                    lblResults.Text += (" " + drPN.GetValue(i).ToString());
                                }
                            }
                        }
                        con.Close();
                        break;
                }
            }
        }
        private bool validiatyCheck()
        {
            bool valid = false;
            if (drpSearchType.SelectedItem.Text != "--Select--")
            {
                valid = true;
            }
            return valid;
        }
    }
}
